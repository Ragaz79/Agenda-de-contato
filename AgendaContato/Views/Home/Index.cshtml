@{
    ViewData["Title"] = "Home Page";
}

@model List<AgendaContato.Models.CONTATO>

<div class="text-center">
    <h1>Contatos</h1>
    <a asp-controller="Home" asp-action="CriarContato" class="btn btn-primary"> + Criar novos contatos</a>
    <br />

    <table class="table table-bordered table-striped mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Categoria</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contato in Model)
            {
                string tipoContato = contato.TIPOCONTATO != null ? contato.TIPOCONTATO.TIPO_NOME : "Sem grupo";
                <tr>
                    <td>@contato.CONTATO_NOME</td>
                    <td>@contato.CONTATO_NUMERO</td>
                    <td>@tipoContato</td>
                    <td>
                        <a asp-action="CriarContato" asp-route-id="@contato.CONTATO_COD" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="DeletaContato" asp-route-id="@contato.CONTATO_COD" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



